{
  "name": "react-ecosystem-boilerplate",
  "version": "1.0.3",
  "description": "React ecosystem boilerplate",
  "license": "MIT",
  "dependencies": {
    "@loadable/component": "^5.10.1",
    "@loadable/server": "^5.9.0",
    "express": "^4.17.1",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-router-dom": "^5.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.4.5",
    "@babel/plugin-proposal-class-properties": "^7.4.4",
    "@babel/plugin-syntax-dynamic-import": "^7.2.0",
    "@babel/preset-env": "^7.4.5",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "^7.3.3",
    "@loadable/babel-plugin": "^5.10.0",
    "@loadable/webpack-plugin": "^5.5.0",
    "@types/css-modules": "^1.0.0",
    "@types/express": "^4.16.1",
    "@types/loadable__component": "^5.9.0",
    "@types/loadable__server": "^5.9.1",
    "@types/node": "^12.0.4",
    "@types/react": "^16.8.19",
    "@types/react-dom": "^16.8.4",
    "@types/react-router-dom": "^4.3.3",
    "@types/webpack-env": "^1.13.7",
    "@typescript-eslint/eslint-plugin": "^1.9.0",
    "@typescript-eslint/parser": "^1.9.0",
    "babel-jest": "^24.8.0",
    "babel-loader": "^8.0.6",
    "babel-plugin-react-remove-properties": "^0.3.0",
    "css-loader": "^2.1.0",
    "cypress": "^3.3.1",
    "enzyme": "^3.9.0",
    "enzyme-adapter-react-16": "^1.13.2",
    "enzyme-to-json": "^3.3.5",
    "eslint": "^5.16.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^4.3.0",
    "eslint-plugin-cypress": "^2.2.1",
    "eslint-plugin-import": "^2.17.3",
    "eslint-plugin-jest": "^22.6.4",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-react": "^7.13.0",
    "husky": "^2.3.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^24.8.0",
    "lint-staged": "^8.1.7",
    "mini-css-extract-plugin": "^0.7.0",
    "node-sass": "^4.12.0",
    "optimize-css-assets-webpack-plugin": "^5.0.1",
    "prettier": "^1.17.1",
    "react-hot-loader": "^4.8.8",
    "sass-loader": "^7.1.0",
    "source-map-loader": "^0.2.4",
    "style-loader": "^0.23.1",
    "stylelint": "^10.0.1",
    "stylelint-config-standard": "^18.3.0",
    "stylelint-order": "^3.0.0",
    "terser-webpack-plugin": "^1.3.0",
    "typescript": "^3.5.1",
    "webpack": "^4.32.2",
    "webpack-cli": "^3.3.2",
    "webpack-dev-server": "^3.5.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && yarn run jest:related",
      "pre-pushed": "lint-staged && yarn run jest:related"
    }
  },
  "lint-staged": {
    "*.{html, md}": [
      "prettier -c"
    ],
    "src/**/*.(c|sa|sc)ss": "stylelint",
    "src/**/*.js": "eslint",
    "src/**/*.{ts,tsx}": "tsc --noEmit --jsx react",
    "tools/**/*.js": "eslint"
  },
  "scripts": {
    "check:types": "tsc",
    "check:types:watch": "tsc --watch",
    "clean:dev": "yarn run clean:dev:css &&  yarn run clean:dev:js && yarn run clean:dev:stats",
    "clean:prod": "yarn run clean:prod:css && yarn run clean:prod:js && yarn run clean:prod:stats",
    "clean:dev:css": "rm -rf dist/dev/public/css/*.css && rm -rf dist/dev/public/css/*.css.map",
    "clean:dev:js": "rm -rf dist/dev/private/js/*.js && rm -rf dist/dev/private/js/*.js.map && rm -rf dist/dev/public/js/*.js && rm -rf dist/dev/public/js/*.js.map",
    "clean:dev:stats": "rm -rf dist/dev/public/stats/*.json",
    "clean:prod:css": "rm -rf dist/prod/public/css/*.css",
    "clean:prod:js": "rm -rf dist/prod/private/js/*.js && rm -rf dist/prod/public/js/*.js",
    "clean:prod:stats": "rm -rf dist/prod/public/stats/*.json",
    "build:dev": "yarn run build:dev:client && yarn run build:dev:server",
    "build:dev:client": "webpack --config tools/webpack/client.dev.config.js",
    "build:dev:server": "webpack --config tools/webpack/server.dev.config.js",
    "build:prod": "yarn run build:prod:client && yarn run build:prod:server",
    "build:prod:client": "webpack --config tools/webpack/client.prod.config.js",
    "build:prod:server": "webpack --config tools/webpack/server.prod.config.js",
    "cy:open:dev": "cypress open --env testEnvName=development",
    "cy:open:prod": "cypress open --env testEnvName=production",
    "cy:run:dev": "cypress run --env testEnvName=development",
    "cy:run:prod": "cypress run --env testEnvName=production",
    "eslint": "eslint src",
    "jest": "jest --config test/jest/config.js --no-cache",
    "jest:coverage": "yarn jest --colors --coverage",
    "jest:related": "yarn jest:coverage --bail --changedSince=master",
    "jest:watch": "yarn jest --watch",
    "lint": "yarn run eslint && yarn run stylelint",
    "stylelint": "stylelint src",
    "start:dev": "yarn run clean:dev && yarn run build:dev && node dist/dev/private/js/server.js",
    "start:prod": "yarn run clean:prod && yarn run build:prod && node dist/prod/private/js/server.js",
    "wds": "webpack-dev-server --config tools/webpack/dev-server.config.js"
  }
}
